<Window x:Class="UI_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_2"
        mc:Ignorable="d"
        Title="Головне вікно" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <StackPanel Margin="5">
        <Button Name="button1" MinWidth="250" Margin="5"
                Content="Відкрити підпорядковане вікно" Padding="5" Click="button1_Click" />
        <Button Name="button2" Margin="5" Content="Відкрити діалогове вікно" Padding="5"
                Click="button2_Click" />
    </StackPanel>
</Window>
